<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/root"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:paddingStart="24dp"
                                                   android:paddingEnd="24dp"
                                                   android:paddingTop="20dp"
                                                   android:paddingBottom="20dp"
                                                   android:background="@color/white"
                                                   tools:context=".ui.dashboard.DashboardFragment">

    <!-- Top App Title -->
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Cards container -->
    <LinearLayout
            android:id="@+id/topCards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:weightSum="2">

        <!-- Heart Rate Card -->
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHeartRate"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                <TextView
                        android:id="@+id/tvHRValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                <TextView
                        android:id="@+id/tvHRUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bpm"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />

                <TextView
                        android:id="@+id/tvHRLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart Rate"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:id="@+id/tvHRStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="6dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- HRV Card -->
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHRV"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                <TextView
                        android:id="@+id/tvHRVValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                <TextView
                        android:id="@+id/tvHRVUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ms"
                        android:textSize="12sp"
                        android:textColor="@color/gray" />

                <TextView
                        android:id="@+id/tvHRVLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HRV"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_marginTop="8dp"/>

                <TextView
                        android:id="@+id/tvHRVStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderate"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="6dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Segment control (Heart Rate / HRV) -->
    <com.google.android.material.chip.ChipGroup
            android:id="@+id/segmentGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:singleSelection="true"
            app:layout_constraintTop_toBottomOf="@id/topCards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

        <com.google.android.material.chip.Chip
                android:id="@+id/chipHeartRate"
                style="@style/Widget.MaterialComponents.CompoundButton.ChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Heart Rate" />

        <com.google.android.material.chip.Chip
                android:id="@+id/chipHRV"
                style="@style/Widget.MaterialComponents.CompoundButton.ChipChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HRV" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Slider / Seek (min - value - max with labels) -->
    <TextView
            android:id="@+id/tvRangeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60   70   100"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/segmentGroup"
            app:layout_constraintStart_toStartOf="parent"/>

    <!-- Short description -->
    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:progress="70"
            android:max="100"
            app:layout_constraintTop_toBottomOf="@id/tvRangeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="A normal resting heart rate for adults typically ranges from 60 to 100 beats per minute, reflecting a healthy balance between cardiovascular efficiency."
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tabs Week / Month / Year (using TabLayout) -->
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="center"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
                android:id="@+id/tabWeek"
                android:text="Week" />

        <com.google.android.material.tabs.TabItem
                android:id="@+id/tabMonth"
                android:text="Month" />

        <com.google.android.material.tabs.TabItem
                android:id="@+id/tabYear"
                android:text="Year" />
    </com.google.android.material.tabs.TabLayout>

    <!-- Chart area (placeholder view) -->
    <FrameLayout
            android:id="@+id/chartContainer"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tabRange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Replace this with a real chart (e.g., MPAndroidChart LineChart) -->
        <View
                android:id="@+id/chartPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chart_placeholder_bg" />

        <!-- Example vertical marker (to mimic tallest point on image) -->
        <View
                android:id="@+id/verticalMarker"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="32dp"
                android:background="@drawable/marker_line" />

    </FrameLayout>

    <!-- X axis labels row -->
    <LinearLayout
            android:id="@+id/xLabels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/chartContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sep 9"
                android:textSize="12sp"
                android:textColor="@color/gray" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sep 11"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/gray" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sep 13"
                android:gravity="end"
                android:textSize="12sp"
                android:textColor="@color/gray" />
    </LinearLayout>

    <!-- Measure Again button -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMeasure"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="18dp"
            android:text="Measure Again"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/blue"
            app:layout_constraintTop_toBottomOf="@id/xLabels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom safe spacing -->
    <View
            android:id="@+id/bottomSpacer"
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnMeasure"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
